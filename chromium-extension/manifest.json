{
    "name": "Make the web dark",
    "version": "0.1",
    "description": "Take all websites to the dark side.",
    "author": "Gabriel Heiler",
    "homepage_url": "https://www.gabrielheiler.com",
    "permissions": ["http://*/*","https://*/*", "tabs", "activeTab", "declarativeContent"],
    "content_scripts": [{
        "matches": ["http://*/*","https://*/*"],
        "css": ["css/basics.css"],
        "js": ["js/contentscript.js"],
        "all_frames": true,
        "run_at": "document_end"
    }],
    "background": {
        "matches": ["http://*/*","https://*/*"],
        "scripts": ["background.js"],
        "persistent": false
      },
    "page_action": {
      "default_popup": "page-popup.html"
    },
    "web_accessible_resources": [
        "css/basics.css",
        "css/extras.css"
    ],
    "manifest_version": 2
  }