{
    "name": "darkify",
    "version": "0.1",
    "description": "The darkify extension will try to modify every website to a dark version of it. You can configure it to automatically run on a period of time, exclude some pages or manually start and stoping it.\n\n If you have any improvement idea or bugs reporting please report them here https://github.com/gheiler/darkify/issues, or if you want to contribute feel free to create a pull request. Best, Gabriel",
    "author": "Gabriel Heiler",
    "homepage_url": "https://www.gabrielheiler.com",
    "permissions": ["http://*/*","https://*/*", "tabs", "activeTab", "declarativeContent", "storage", "webNavigation"],
    "content_scripts": [{
        "matches": ["http://*/*","https://*/*"],
        "css": ["css/basics.css"],
        "js": ["js/contentscript.js"],
        "all_frames": true,
        "run_at": "document_start"
    }],
    "background": {
        "matches": ["http://*/*","https://*/*", "*"],
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "img/mtwd.png",
          "32": "img/mtwd.png",
          "48": "img/mtwd.png",
          "128": "img/mtwd.png"
      }
    },
    "options_page": "options.html",
    "icons": {
        "16": "img/mtwd.png",
        "32": "img/mtwd.png",
        "48": "img/mtwd.png",
        "128": "img/mtwd.png"
    },
    "web_accessible_resources": [
        "css/basics.css",
        "css/extras.css"
    ],
    "manifest_version": 2
}